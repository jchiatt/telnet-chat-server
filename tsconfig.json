{
  "compilerOptions": {
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["esnext"],
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "dist",
      "rootDir": "src",
      "skipLibCheck": true,
      "strict": true,
      "target": "es2020",
      "types": ["node"]
  },
  "include": ["src"]
}